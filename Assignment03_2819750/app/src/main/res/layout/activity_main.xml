<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.example.adedayoadelowokan.assignment03.TraceView
        android:id="@+id/traceView"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTime"
        android:textSize="18sp"
        android:layout_above="@+id/tvSpeed"
        android:text="@string/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSpeed"
        android:textSize="18sp"
        android:layout_above="@+id/tvCurrentAverage"
        android:text="@string/speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvCurrentAverage"
        android:textSize="18sp"
        android:layout_above="@+id/tvOverallAverage"
        android:text="@string/currentAverage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvOverallAverage"
        android:textSize="18sp"
        android:layout_above="@+id/bTimer"
        android:text="@string/overallAverage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bTimer"
        android:text="Start Tracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
